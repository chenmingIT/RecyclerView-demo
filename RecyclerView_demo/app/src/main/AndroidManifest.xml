<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kevin.recyclerview_demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListLayoutActivity"
            android:label="@string/title_activity_list_layout" />
        <activity
            android:name=".GridLayoutActivity"
            android:label="@string/title_activity_grid_layout" />
        <activity
            android:name=".StaggerLayoutActivity"
            android:label="@string/title_activity_stagger_layout"></activity>
    </application>

</manifest>
